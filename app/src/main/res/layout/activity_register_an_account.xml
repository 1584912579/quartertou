<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/c"
    android:layout_height="wrap_content"
    tools:context=".ui.register.Register_an_accountActivity">

    <include layout="@layout/layout_existing_account"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="账号"/>
        <EditText
            android:id="@+id/mobile_register"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:hint="请输入手机号" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="密码"/>
        <EditText
            android:id="@+id/password_register"
            android:layout_width="230dp"
            android:textColor="#FFFFFF"
            android:password="true"
            android:layout_height="wrap_content"
            android:hint="输入大小写和数字"
            android:textSize="20dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/register"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="#FFBC79"/>
    <TextView
        android:id="@+id/tourist_register"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>

</LinearLayout>