<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
    <ImageView
        android:id="@+id/v_f"
        android:layout_margin="10dp"
        android:src="@drawable/raw_1500019926"
        android:layout_width="30dp"
        android:layout_height="30dp" />
        <ImageView
            android:id="@+id/v_g"
            android:layout_margin="10dp"
            android:src="@drawable/raw_1499933216"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/v_qg"
            android:layout_margin="10dp"
            android:src="@drawable/raw_1499933217"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/v_fx"
            android:layout_margin="10dp"
            android:src="@drawable/raw_1499995160"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/v_sim"
            fresco:roundAsCircle="true"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <com.universalvideoview.UniversalVideoView
            android:id="@+id/videoview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            fresco:uvv_autoRotation="true"
            fresco:uvv_fitXY="false"/>
        <com.universalvideoview.UniversalMediaController
            android:id="@+id/media_control"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            fresco:uvv_scalable="true"/>
    </FrameLayout>
    <TextView
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/v_ci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
