<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/u_sim"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
            <LinearLayout
                android:id="@+id/u_ll"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/u_fh"
                    android:src="@drawable/raw_1500023215"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/u_tv"
                    android:text="sssss"
                    android:textColor="#fff"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/u_fx"
                    android:src="@drawable/share"
                    android:layout_marginRight="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/u_zan"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/my_msg_hei"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>
        <LinearLayout
            android:id="@+id/u_lll"
            android:layout_below="@id/u_ll"
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/u_sim2"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                fresco:roundAsCircle="true"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/u_fxgz"
                    android:textColor="#666"
                    android:text="ssss"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/j_gz"
                    android:text="关注"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/u_zhan"
                android:layout_width="80dp"
                android:layout_marginTop="20dp"
                fresco:roundedCornerRadius="15dp"
                android:layout_height="80dp" />
        </LinearLayout>
        <TextView
            android:text="作品"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:textColor="#29B6F6"
            android:layout_below="@id/u_lll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="#DEDEDE"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/u_xrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
